@model List<Reservation>
@{
    ViewData["Title"] = "จัดการการจอง";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid px-4">
    <h2 class="mt-4"><i class="fas fa-concierge-bell"></i> @ViewData["Title"]</h2>
    
    <div class="card mb-4 shadow">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-table me-1"></i> รายการจองทั้งหมด
        </div>
        <div class="card-body">
            <table class="table table-hover animate__animated animate__fadeIn">
                <thead class="table-dark">
                    <tr>
                        <th>ชื่อลูกค้า</th>
                        <th>วันที่จอง</th>
                        <th>เวลา</th>
                        <th>โต๊ะ</th>
                        <th>สถานะ</th>
                        <th>การดำเนินการ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="animate__animated animate__slideInDown">
                            <td>@item.CustomerName</td>
                            <td>@item.ReservationDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.ReservationTime.ToString("HH:mm")</td>
                            <td>
                                <span class="badge bg-info">@item.TableNumber</span>
                            </td>
                            <td>
                                <span class="badge @(item.Status == "Confirmed" ? "bg-success" : "bg-warning")">
                                    @item.Status
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    @if (item.Status != "Confirmed")
                                    {
                                        <form asp-action="Confirm" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-success me-2">
                                                <i class="fas fa-check"></i> ยืนยัน
                                            </button>
                                        </form>
                                    }
                                    <form asp-action="Delete" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('แน่ใจว่าต้องการลบรายการนี้?')">
                                            <i class="fas fa-trash"></i> ลบ
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>