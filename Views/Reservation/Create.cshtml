@model Reservation
@{
    ViewData["Title"] = "จองโต๊ะร้านอาหาร";
    Layout = "_Layout";
}

<div class="booking-container animate__animated animate__fadeInUp">
    <div class="glass-card p-5 shadow-lg">
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold gradient-text">
                <i class="fas fa-calendar-check me-2"></i>จองโต๊ะอาหาร
            </h1>
            <p class="text-muted">กรุณากรอกข้อมูลให้ครบถ้วนเพื่อการจองที่สมบูรณ์</p>
        </div>

        <!-- Form จอง -->
        <form asp-action="Create" class="needs-validation" novalidate>
            <div class="row g-4">
                <!-- ส่วนกรอกข้อมูล -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="CustomerName" class="form-control" 
                               placeholder="ชื่อลูกค้า" required>
                        <label><i class="fas fa-user me-2"></i>ชื่อลูกค้า</label>
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Email" type="email" class="form-control" 
                               placeholder="อีเมล" required>
                        <label><i class="fas fa-envelope me-2"></i>อีเมล</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Date & Time Picker -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="ReservationDate" class="form-control date-picker" 
                               placeholder="วันที่จอง" required>
                        <label><i class="fas fa-calendar-day me-2"></i>วันที่จอง</label>
                        <span asp-validation-for="ReservationDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="ReservationTime" class="form-control time-picker" 
                               placeholder="เวลา" required>
                        <label><i class="fas fa-clock me-2"></i>เวลา</label>
                        <span asp-validation-for="ReservationTime" class="text-danger"></span>
                    </div>
                </div>

                <!-- จำนวนคน & โต๊ะ -->
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="NumberOfPeople" class="form-control" 
                               min="1" max="10" placeholder="จำนวนคน" required>
                        <label><i class="fas fa-users me-2"></i>จำนวนคน</label>
                        <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="TableNumber" class="form-select" required>
                            <option value="">เลือกโต๊ะ...</option>
                            @for (int i = 1; i <= 10; i++){
                                <option value="T@i">โต๊ะ T@i (@(i*2)-@(i*2+2) คน)</option>
                            }
                        </select>
                        <label><i class="fas fa-chair me-2"></i>เลือกโต๊ะ</label>
                        <span asp-validation-for="TableNumber" class="text-danger"></span>
                    </div>
                </div>

                <!-- ปุ่ม Submit -->
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg glow-on-hover">
                        <i class="fas fa-paper-plane me-2"></i>ส่งการจอง
                    </button>
                </div>
            </div>
        </form>

        <!-- ตรวจสอบสถานะ -->
        <div class="status-check mt-5 animate__animated animate__slideInUp">
            <h5 class="text-center mb-3">
                <i class="fas fa-search me-2"></i>ตรวจสอบสถานะการจอง
            </h5>
            <div class="input-group">
                <input type="email" id="emailCheck" class="form-control" 
                       placeholder="กรอกอีเมลของคุณ">
                <button class="btn btn-outline-primary" onclick="checkStatus()">
                    <i class="fas fa-check-circle"></i>
                </button>
            </div>
            <div id="statusResult" class="mt-3"></div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <style>
        .booking-container {
            background: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            min-height: 100vh;
            padding: 4rem 0;
        }

        .glass-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .gradient-text {
            background: linear-gradient(45deg, #ff6b6b, #ff8e53);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .glow-on-hover {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .glow-on-hover:hover {
            box-shadow: 0 0 20px rgba(255, 107, 107, 0.5);
            transform: translateY(-2px);
        }

        .status-check {
            background: rgba(255, 255, 255, 0.9);
            padding: 1.5rem;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
}

@section Scripts {
    <script>
        // ตรวจสอบสถานะด้วย AJAX
        async function checkStatus() {
            const email = document.getElementById('emailCheck').value;
            const resultDiv = document.getElementById('statusResult');
            
            if (!email) {
                resultDiv.innerHTML = `<div class="alert alert-warning">กรุณากรอกอีเมล</div>`;
                return;
            }

            try {
                const response = await fetch(`/Reservation/MyReservations?email=${email}`);
                const data = await response.text();
                resultDiv.innerHTML = data;
                resultDiv.classList.add('animate__fadeIn');
            } catch (error) {
                resultDiv.innerHTML = `<div class="alert alert-danger">เกิดข้อผิดพลาดในการตรวจสอบ</div>`;
            }
        }
    </script>
}